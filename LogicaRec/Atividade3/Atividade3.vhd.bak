-- ------------------------------------
library ieee ;
 use ieee . std_logic_1164 . all ;
 -- ------------------------------------
 entity Atividade3 is
 port (
	 sel   : in  std_logic_vector(3 downto 0);
    y : out std_logic_vector(6 downto 0)
 );
 end entity ;
 -- ------------------------------------
 architecture Atividade3 of Atividade3 is
 begin
	when sel select
		y <= when "0000" <= "0000001"; -- "0"     
           when "0001" <= "1001111"; -- "1" 
           when "0010" <= "0010010"; -- "2" 
           when "0011" <= "0000110"; -- "3" 
           when "0100" <= "1001100"; -- "4" 
           when "0101" <= "0100100"; -- "5" 
           when "0110" <= "0100000"; -- "6" 
           when "0111" <= "0001111"; -- "7" 
           when "1000" <= "0000000"; -- "8"     
           when "1001" <= "0000100"; -- "9" 
           when "1010" <= "0000010"; -- a
           when "1011" <= "1100000"; -- b
           when "1100" <= "0110001"; -- C
           when "1101" <= "1000010"; -- d
           when "1110" <= "0110000"; -- E
           when others  <= "0000001"; -- F
			  
			  
 end architecture ;
